{
  "entities": {
    "Estate": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Estate",
      "type": "object",
      "description": "Represents the overall estate information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the estate. Usually a fixed value like 'main-estate-info'."
        },
        "name": {
          "type": "string",
          "description": "Name of the estate."
        },
        "address": {
          "type": "string",
          "description": "Address of the estate."
        },
        "contactNumber": {
          "type": "string",
          "description": "Contact number for the estate management."
        },
        "email": {
          "type": "string",
          "description": "Email address for the estate management.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "name",
        "address"
      ]
    },
    "Personnel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Personnel",
      "type": "object",
      "description": "Represents personnel working in the estate.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the personnel."
        },
        "firstName": {
          "type": "string",
          "description": "First name of the personnel."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the personnel."
        },
        "contactNumber": {
          "type": "string",
          "description": "Contact number of the personnel."
        },
        "jobTitle": {
          "type": "string",
          "description": "Job title of the personnel."
        },
        "baseSalary": {
          "type": "number",
          "description": "Monthly base salary of the personnel."
        },
        "accountNumber": {
            "type": "string",
            "description": "Bank account number for salary payment."
        },
        "insuranceNumber": {
            "type": "string",
            "description": "Social security or insurance number."
        },
        "numberOfChildren": {
            "type": "number",
            "description": "Number of children for calculating child allowance."
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "jobTitle",
        "baseSalary"
      ]
    },
    "Stakeholder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Stakeholder",
      "type": "object",
      "description": "Represents individuals or legal entities having a stake in the estate (e.g., villa owners).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the stakeholder."
        },
        "name": {
          "type": "string",
          "description": "Name of the stakeholder."
        },
        "contactNumber": {
          "type": "string",
          "description": "Contact number of the stakeholder."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email of the stakeholder."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Villa": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Villa",
      "type": "object",
      "description": "Represents a villa in the estate.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the villa."
        },
        "villaNumber": {
          "type": "string",
          "description": "Villa number or identifier."
        },
        "location": {
          "type": "string",
          "description": "Location description of the villa within the estate."
        },
        "ownerId": {
          "type": "string",
          "description": "Reference to Stakeholder's ID."
        },
        "ownerName": {
          "type": "string",
          "description": "Denormalized owner name for display purposes."
        },
        "size": {
          "type": "number",
          "description": "Size of the villa in square meters."
        }
      },
      "required": [
        "id",
        "villaNumber",
        "ownerId",
        "ownerName"
      ]
    },
    "FinancialTransaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FinancialTransaction",
      "type": "object",
      "description": "Represents a financial transaction (income or expense).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the transaction."
        },
        "type": {
          "type": "string",
          "enum": [
            "income",
            "expense"
          ],
          "description": "Type of transaction (income/expense)."
        },
        "date": {
          "type": "string",
          "description": "Date of the transaction.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "Amount of the transaction."
        },
        "description": {
          "type": "string",
          "description": "Description of the transaction."
        }
      },
      "required": [
        "id",
        "type",
        "date",
        "amount",
        "description"
      ]
    },
    "Payroll": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Payroll",
      "type": "object",
      "description": "Represents a calculated payroll for a specific month for a personnel.",
      "properties": {
        "id": {"type": "string"},
        "personnelId": {"type": "string"},
        "month": {"type": "string", "description": "The month of the payroll in YYYY-MM format."},
        "payDate": {"type": "string", "format": "date-time"},
        "baseSalary": {"type": "number"},
        "housingAllowance": {"type": "number"},
        "foodAllowance": {"type": "number"},
        "childAllowance": {"type": "number"},
        "overtimeHours": {"type": "number"},
        "overtimePay": {"type": "number"},
        "totalEarnings": {"type": "number"},
        "insuranceDeduction": {"type": "number"},
        "taxDeduction": {"type": "number"},
        "totalDeductions": {"type": "number"},
        "netPay": {"type": "number"}
      },
      "required": [
        "id", "personnelId", "month", "payDate", "baseSalary", "totalEarnings", "totalDeductions", "netPay"
      ]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document related to the company, stakeholders, or personnel.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the document."
        },
        "fileName": {
          "type": "string",
          "description": "Name of the document file."
        },
        "fileType": {
          "type": "string",
          "description": "Type of the document file (e.g., PDF, DOCX)."
        },
        "uploadDate": {
          "type": "string",
          "description": "Date the document was uploaded.",
          "format": "date-time"
        },
        "fileUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the stored file in Firebase Storage."
        }
      },
      "required": [
        "id",
        "fileName",
        "fileType",
        "uploadDate",
        "fileUrl"
      ]
    },
    "Attendance": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Attendance",
      "type": "object",
      "description": "Represents daily attendance records for personnel.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for the attendance record (e.g., YYYY-MM-DD_personnelId)."
        },
        "personnelId": {
          "type": "string",
          "description": "Reference to the Personnel's ID."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the record."
        },
        "status": {
          "type": "string",
          "enum": ["present", "absent"],
          "description": "Attendance status for the day."
        },
        "entryTime": {
          "type": "string",
          "format": "time",
          "description": "The time of entry."
        },
        "exitTime": {
          "type": "string",
          "format": "time",
          "description": "The time of exit."
        },
        "isLate": {
          "type": "boolean",
          "description": "Whether the personnel was late on this day."
        }
      },
      "required": ["id", "personnelId", "date", "status"]
    },
    "PayrollSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PayrollSettings",
      "type": "object",
      "description": "Stores global settings for payroll calculation.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier, should be a fixed value like 'default'."
        },
        "insuranceRate": {
          "type": "number",
          "description": "The percentage rate for insurance deductions (employee's share)."
        },
        "monthlyHousingAllowance": {
            "type": "number",
            "description": "Monthly housing allowance amount."
        },
        "monthlyFoodAllowance": {
            "type": "number",
            "description": "Monthly food allowance amount."
        },
        "perChildAllowance": {
            "type": "number",
            "description": "Allowance amount per child."
        },
        "taxBrackets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": { "type": "number" },
              "to": { "type": "number" },
              "rate": { "type": "number" }
            }
          },
          "description": "An array defining annual tax brackets and their rates."
        }
      },
      "required": ["id", "insuranceRate", "taxBrackets", "monthlyHousingAllowance", "monthlyFoodAllowance"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/estates/{estateId}": {
      "schema": { "$ref": "#/backend/entities/Estate" },
      "description": "Stores general estate information. Should contain a single document with a fixed ID for main settings."
    },
    "/personnel/{personnelId}": {
      "schema": { "$ref": "#/backend/entities/Personnel" },
      "description": "Stores detailed personnel information."
    },
    "/stakeholders/{stakeholderId}": {
      "schema": { "$ref": "#/backend/entities/Stakeholder" },
      "description": "Stores stakeholder (e.g., owner) information."
    },
    "/villas/{villaId}": {
      "schema": { "$ref": "#/backend/entities/Villa" },
      "description": "Stores villa information. Owner details are denormalized for easy access."
    },
    "/financial_transactions/{transactionId}": {
      "schema": { "$ref": "#/backend/entities/FinancialTransaction" },
      "description": "Stores all financial transactions (income and expenses)."
    },
    "/payrolls/{payrollId}": {
      "schema": { "$ref": "#/backend/entities/Payroll" },
      "description": "Stores payroll records for personnel."
    },
    "/documents/{documentId}": {
      "schema": { "$ref": "#/backend/entities/Document" },
      "description": "Stores documents related to various entities."
    },
    "/attendances/{attendanceId}": {
        "schema": { "$ref": "#/backend/entities/Attendance" },
        "description": "Stores daily attendance records for all personnel."
    },
    "/payroll_settings/{settingId}": {
        "schema": { "$ref": "#/backend/entities/PayrollSettings" },
        "description": "Stores global payroll settings like tax and insurance rates."
    }
  }
}
